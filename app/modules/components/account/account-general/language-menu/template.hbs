{{#basic-dropdown as |dropdown|}}
  {{#dropdown.trigger local-class="language-menu-trigger"}}
    {{#ui-button color="border" expand=true}}
      <span>{{t (concat "language-menu." destinationLanguage)}}</span>
    {{/ui-button}}
  {{/dropdown.trigger}}
  {{#dropdown.content local-class="language-menu-content"}}
    <ul class="option checkmark">
      <ul class="option-contents">
        {{#each languageList as |language|}}
          <li class={{if (eq language destinationLanguage) 'active'}}>
            <a onclick={{action (pipe onClick dropdown.actions.close) language}}>
              {{#if (eq language destinationLanguage)}}
                {{ui-icon icon="ui-check" style="checkmark"}}
              {{/if}}
              <span>{{t (concat "language-menu." language)}}</span>
            </a>
          </li>
        {{/each}}
      </ul>
    </ul>
  {{/dropdown.content}}
{{/basic-dropdown}}
