{{#basic-dropdown as |dropdown|}}
  {{#dropdown.trigger local-class="chart-addon-trigger"}}
    {{ui-button (t "chart-addon-dropdown.option") icon="arrows-half-down" expand=true}}
  {{/dropdown.trigger}}
  {{#dropdown.content local-class="chart-addon-content"}}
    <ul class="option">
      <li>
        <a>
          {{ui-icon icon="ui-settings-gear"}}
          <span>{{t "chart-addon-dropdown.settings"}}</span>
        </a>
      </li>
      <li>
        <a>
          {{ui-icon icon="history"}}
          <span>{{t "reporting-tools.revert"}}</span>
        </a>
      </li>
      <li>
        <a>
          {{ui-icon icon="files-duplicate"}}
          <span>{{t "reporting-tools.duplicate"}}</span>
        </a>
      </li>
      <li>
        <a>
          {{ui-icon icon="arrows-system-update"}}
          <span>{{t "reporting-tools.download"}}</span>
        </a>
      </li>
      <li>
        <a>
          {{ui-icon icon="ui-share"}}
          <span>{{t "reporting-tools.share"}}</span>
        </a>
      </li>
    </ul>
  {{/dropdown.content}}
{{/basic-dropdown}}
