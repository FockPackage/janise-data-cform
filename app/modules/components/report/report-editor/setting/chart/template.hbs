<div class="editor-container">
  <div class="editor-row" local-class="type">
    <p>{{t "chart-editor.chart-type"}}</p>
    <div local-class="chart-type-dropdown">
      {{#basic-dropdown as |dropdown|}}
        {{#dropdown.trigger local-class="chart-type-trigger" }}
          {{ui-button (t "chart-type-dropdown.column") color="border" icon="chart-column" expand=true}}
        {{/dropdown.trigger}}
        {{#dropdown.content local-class="chart-type-content" }}
          <ul class="option checkmark">
            <ul class="option-contents">
              <li>
                <a>
                  {{ui-icon icon="ui-check" style="checkmark"}}
                  {{ui-icon icon="chart-column"}}
                  <span>{{t "chart-type-dropdown.column"}}</span>
                </a>
              </li>
              <li>
                <a>
                  {{ui-icon icon="chart-bar"}}
                  <span>{{t "chart-type-dropdown.bar"}}</span>
                </a>
              </li>
              <li>
                <a>
                  {{ui-icon icon="chart-line"}}
                  <span>{{t "chart-type-dropdown.line"}}</span>
                </a>
              </li>
              <li>
                <a>
                  {{ui-icon icon="chart-area"}}
                  <span>{{t "chart-type-dropdown.area"}}</span>
                </a>
              </li>
              <li>
                <a>
                  {{ui-icon icon="chart-pie"}}
                  <span>{{t "chart-type-dropdown.pie"}}</span>
                </a>
              </li>
              <li>
                <a>
                  {{ui-icon icon="chart-scatter"}}
                  <span>{{t "chart-type-dropdown.scatter"}}</span>
                </a>
              </li>
              <li>
                <a>
                  {{ui-icon icon="chart-bubble"}}
                  <span>{{t "chart-type-dropdown.bubble"}}</span>
                </a>
              </li>
              <li>
                <a>
                  {{ui-icon icon="chart-mix"}}
                  <span>{{t "chart-type-dropdown.mixed"}}</span>
                </a>
              </li>
            </ul>
          </ul>
        {{/dropdown.content}}
      {{/basic-dropdown}}
    </div>
  </div>
  <div class="editor-row" local-class="options">
    <p>{{t "chart-editor.chart-options"}}</p>
    <form action="">
      <fieldset>
        {{ui-checkbox
          class="content-column app-checkbox"
          checkbox="checkbox"
          size=""
          name="title"
          label=(t "chart-editor.title")
          help=""
        }}
        {{ui-input
          type="text"
          class="content-column app-input"
          size="large"
          name="title"
          placeholder=""
          label=""
          alert=""
          help=""
        }}
        {{ui-checkbox
          class="content-column app-checkbox"
          checkbox="checkbox"
          size=""
          name="legend"
          label=(t "chart-editor.legend")
          help=""
        }}
        <div local-class="legend">
          <div local-class="legend-item">
            <i local-class="legend-icon" style={{html-safe 'background-color: #5940aa'}}></i>
            <input type="text" name="legend" placeholder="Legend Sample 1">
            {{#if alert}}
              <div class="alert">{{alert}}</div>
            {{/if}}
          </div>
          <div local-class="legend-item">
            <i local-class="legend-icon" style={{html-safe 'background-color: #2ecc71'}}></i>
            <input type="text" name="legend" placeholder="Legend Sample 2">
            {{#if alert}}
              <div class="alert">{{alert}}</div>
            {{/if}}
          </div>
          <div local-class="legend-item">
            <i local-class="legend-icon" style={{html-safe 'background-color: #2ecc71'}}></i>
            <input type="text" name="legend" placeholder="Legend Sample 3">
            {{#if alert}}
              <div class="alert">{{alert}}</div>
            {{/if}}
          </div>
        </div>
      </fieldset>
    </form>
  </div>

  <div class="editor-row" local-class="font">
    <p>{{t "chart-editor.chart-font"}}</p>
    <div local-class="style-font-dropdown">
      {{#basic-dropdown as |dropdown|}}
        {{#dropdown.trigger}}
          {{ui-button (t "category-labels-dropdown.auto-fit") color="border" expand=true}}
        {{/dropdown.trigger}}
        {{#dropdown.content}}
          <ul class="option checkmark">
            <ul class="option-contents">
              <li>
                <a>
                  {{ui-icon icon="ui-check" style="checkmark"}}
                  <span>{{t "category-labels-dropdown.none"}}</span>
                </a>
              </li>
              <li>
                <a>
                  <span>{{t "category-labels-dropdown.auto-fit"}}</span>
                </a>
              </li>
              <li>
                <a>
                  <span>{{t "category-labels-dropdown.show-all"}}</span>
                </a>
              </li>
            </ul>
          </ul>
        {{/dropdown.content}}
      {{/basic-dropdown}}
    </div>
    {{!--{{ui-input-number local-class="font-size" value="2" min="0" max="100" unit="px" label="" alert=""}}--}}
  </div>

  <div class="editor-row" local-class="gaps">
    <p>{{t "chart-editor.gaps"}}</p>
    {{!--{{ui-input-number local-class="between" value="20" min="0" max="100" unit="%" label=(t "chart-editor.between-columns") alert=""}}--}}
    {{!--{{ui-input-number local-class="between" value="20" min="0" max="100" unit="%" label=(t "chart-editor.between-sets") alert=""}}--}}
  </div>
</div>
