<div class="editor-container">
  <div class="editor-row" local-class="value-labels">
    <p>{{t "chart-editor.value-labels"}}</p>
    <p>{{t "chart-editor.decimals"}}</p>
    <div local-class="value-labels-dropdown">
      {{#basic-dropdown as |dropdown|}}
        {{#dropdown.trigger local-class="value-labels-trigger" }}
          {{ui-button (t "value-labels-dropdown.none") color="border" expand=true}}
        {{/dropdown.trigger}}
        {{#dropdown.content local-class="value-labels-content" }}
          <ul class="option checkmark">
            <ul class="option-contents">
              <li>
                <a>
                  {{ui-icon icon="ui-check" style="checkmark"}}
                  <span>{{t "value-labels-dropdown.none"}}</span>
                </a>
              </li>
              <li>
                <a>
                  <span>{{t "value-labels-dropdown.number"}}</span>
                </a>
              </li>
              <li>
                <a>
                  <span>{{t "value-labels-dropdown.currency"}}</span>
                </a>
              </li>
              <li>
                <a>
                  <span>{{t "value-labels-dropdown.percentage"}}</span>
                </a>
              </li>
              <li>
                <a>
                  <span>{{t "value-labels-dropdown.fraction"}}</span>
                </a>
              </li>
            </ul>
          </ul>
        {{/dropdown.content}}
      {{/basic-dropdown}}
    </div>
    {{!--{{ui-input-number local-class="decimals" value="2" min="0" max="100" unit="" label=(t "chart-editor.decimals") alert=""}}--}}
    {{ui-checkbox
      local-class="thousands-separator"
      class="content-column app-checkbox"
      checkbox="checkbox"
      size=""
      name="thousands-separator"
      label=(t "chart-editor.thousands-separator")
      help=""
    }}
  </div>

  <div class="editor-row" local-class="prefix">
    {{ui-input
          type="text"
          class="content-column app-input"
          double="double"
          name-l="prefix"
          name-r="suffix"
          placeholder-l=""
          placeholder-r=""
          label-l=(t "chart-editor.prefix")
          label-r=(t "chart-editor.suffix")
          alert-l=""
          alert-r=""
          help=""
        }}
  </div>

  <div class="editor-row" local-class="location">
    <p>{{t "chart-editor.location"}}</p>
    {{#basic-dropdown as |dropdown|}}
      {{#dropdown.trigger}}
        {{ui-button (t "location-dropdown.top") color="border" expand=true}}
      {{/dropdown.trigger}}
      {{#dropdown.content}}
        <ul class="option checkmark">
          <ul class="option-contents">
            <li>
              <a>
                {{ui-icon icon="ui-check" style="checkmark"}}
                <span>{{t "location-dropdown.top"}}</span>
              </a>
            </li>
            <li>
              <a>
                <span>{{t "location-dropdown.middle"}}</span>
              </a>
            </li>
            <li>
              <a>
                <span>{{t "location-dropdown.bottom"}}</span>
              </a>
            </li>
          </ul>
        </ul>
      {{/dropdown.content}}
    {{/basic-dropdown}}
  </div>
</div>
