<div class="center-wrapper">
  <div class="main-container">
    {{!-- {{ui-icon-button icon="ui-simple-remove"}} --}}
    {{ui/side-panel
      tagName=""
      color="purple"
      welcome=(t "login.welcome-back")
      slogan=(t "login.slogan")
    }}
    <div class="modal">
      <div class="modal-container">
				<h2>{{t "login.login-into"}}</h2>
        {{#ui-fieldset direction="column" size="xl" help="" as |f|}}
          {{f.input
            type="email"
            name="email"
            placeholder=(t "login.email")
            value=formValue.email
            error=(if error.email "邮箱格式不正确")
          }}
          {{f.input
            type="password"
            name="password"
            placeholder=(t "login.password")
            value=formValue.password
            error=(if error.password "用户名或密码错误")
            onEnter=(action "login")
          }}
        {{/ui-fieldset}}

        {{#ui-fieldset direction="" size="xl" help="" as |f|}}
          {{f.checkbox subject="" checked=checked name="remember-me" label=(t "login.remember-me") disabled=""}}
          <a href="" class="forgot-password">
            <span>{{t "login.forgot-password"}}</span>
          </a>
        {{/ui-fieldset}}

        {{ui-button (t "login.login") color="purple" class="login-button" onClick=(action "login")}}

				<div class="hr-label">
					<span>{{t "login.or"}}</span>
				</div>

        {{ui/social-authorization class="social-authorization"}}

      </div>

			<div class="modal-footer">
				<span>{{t "login.no-account"}}</span>
        {{#link-to 'signup'}}
					<span>{{t "login.create-account"}}</span>
        {{/link-to}}
			</div>
    </div>

  </div>
</div>


{{outlet}}
