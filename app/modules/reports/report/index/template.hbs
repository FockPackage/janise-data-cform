{{#report/report-editor model as |editor api|}}
  {{editor.navigator}}

  <div class="content-wrap">
    <aside class="sidebar" local-class="sidebar">
      {{#editor.manager as |manager|}}
        {{manager.source-list api.customGroup isCustomGroup=true}}

        {{#each api.originGroups as |originGroup|}}
          {{manager.source-list originGroup isCustomGroup=false}}
        {{/each}}
      {{/editor.manager}}
    </aside>
  </div>
{{/report/report-editor}}

{{!--
<div class="w-container">
  次级导航

  <div class="content-wrap">
    侧边栏
    <aside class="sidebar" local-class="sidebar {{if api.isMaximized 'maximize'}}">

