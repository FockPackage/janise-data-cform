      {{#each api.availableSources as |source outerIndex|}}

        具体数据列表
        {{#each source.data as |datum innerIndex|}}
          {{editor.section datum api=api expanded=(and (eq outerIndex 0) (eq innerIndex 0))}}
        {{/each}}

      {{/each}}
